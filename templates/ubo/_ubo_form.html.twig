{{ form_start(form, {'attr': {'class': 'edit-form p-3 bg bg-light', 'novalidate': 'novalidate'}}) }}
    <div class="form-row">
        <div class="form-group col-6">
            {{form_row(form.firstName)}}
        </div>
        <div class="form-group col-6">
            {{form_row(form.lastName)}}
        </div>
    </div>
    <div class="form-group">
        {{form_row(form.birthDate)}}
    </div>
    <div class="form-group">
        {{form_row(form.country)}}
    </div>
    <div class="form-row">
        <div class="form-group col-6">
            {{form_row(form.submit)}}
        </div>
        <div class="form-group col-6">
            <button class="ubo-cancel-btn btn bg bg-dark btn-block text-white text-uppercase">
                    Annuler
            </button>
        </div>
    </div>
{{ form_end(form) }}